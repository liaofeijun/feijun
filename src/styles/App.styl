/* Base Application Styles */
html,
body
    width: 100%
    height:100%
    background: #222

.content
    width: 100%
    height:100%

    .stage
        width: 100%
        height: 680px

    .img-sec
        position: relative
        width: 100%
        height:100%
        background: #ddd
        overflow: hidden

        .img-figure
            position: absolute
            width: 200px
            height: 190px
            margin: 0
            padding: 20px
            background: #fff
            box-sizing: border-box
            text-align: center

            img
                width: 100%

            h2
                font-size: 16px


    .controller-nav
        position: absolute
        left: 0
        bottom: 30px
        z-index: 101
        width: 100%
        text-align: center