/* Base Application Styles */
html,
body
    width: 100%
    height:100%
    background: #222

.content
    width: 100%
    height:100%

    .stage
        width: 100%
        height: 540px

    .img-sec
        position: relative
        width: 100%
        height:100%
        background: #ddd
        overflow: hidden
        perspective: 1800px

        .img-figure
            position: absolute
            width: 200px
            height: 190px
            margin: 0
            padding: 20px
            background: #fff
            box-sizing: border-box
            text-align: center
            cursor: pointer
            transform-style: preserve-3d
            transition: transform .6s ease-in-out, left .6s ease-in-out, top .6s ease-in-out
            transform-origin: 0 50% 0

            &.is-inverse
                transform: translate(200px) rotateY(180deg)

            .img-box
                position: relative
                z-index: 10

            .img-back
                position: absolute
                left: 0
                top: 0
                height: 190px
                width: 200px
                background: #fff
                transform: rotateY(-180deg) translateZ(1px)
            img
                width: 100%

            h2
                font-size: 16px



    .controller-nav
        vertical-align middle
        text-align center

        .controller-unit
            display inline-block
            width 20px
            height 20px
            margin 0 5px
            background #aaa
            border-radius 50%
            cursor pointer
            transform scale(.5)

            &.is-center
                background #888
                transform scale(1)